        </style>


        </head>	
        
        <body>
                      
                <div class="row animated-fast1 fadeInUp animate-box">
                        <div class="col-sm-8">
                                <div class="first_div">
                                        <section>
        
                                                <div id="menu-bar">			
                                                        <div id="menu" onclick="onClickMenu()">				
                                                                <div id="bar1" class="bar"></div>				
                                                                <div id="bar2" class="bar"></div>				
                                                                <div id="bar3" class="bar"></div>			
                                                        </div>			
                                                        <ul class="navV" id="navV">				
                                                                <li><a href="/">Home</a></li>				
                                                                <li><a href="/posts">posts</a></li>			
                                                        </ul>		
                                                </div>		
                                                <div class="menu-bg" id="menu-bg"></div>        

                                        </section>	
                                        <div>
                                                <div class="sampu">
                                                        <div class="insampu"></div>
                                                        <div class="insampu"></div>
                                                        <div class="insampu"></div>
                                                        <div class="insampu"></div>
